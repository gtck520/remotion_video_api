# Server Configuration
PORT=3006

# Remotion Configuration
# Optional: URL where the Remotion bundle is served. If not provided, it will be bundled at runtime.
# REMOTION_SERVE_URL=http://localhost:3000

# Authentication Configuration
# Set to true to enable VIP authentication for MCP endpoints
AUTH_REQUIRED=true

# VIP Verification API Configuration
# The host of the external VIP verification API (e.g., api.example.com)
VIP_API_HOST=auto.kanglan.vip
# The path to the verification endpoint (e.g., /api/verify_vip)
VIP_API_PATH=/cozeapi/user/checkVip

# API Keys
ZHIPU_API_KEY=your_zhipu_api_key_here
PEXELS_API_KEY=your_pexels_api_key_here

# Coze Configuration
COZE_API_TOKEN=your_coze_api_token_here
COZE_USER_TOKEN=your_coze_user_token_here
COZE_WORKFLOW_ID=your_coze_workflow_id_here

# Cleanup Configuration
MEDIA_RETENTION_MINUTES=60

WEBDAV_URL="https://dav.your-cloud.com"
WEBDAV_USERNAME="your-username"
WEBDAV_PASSWORD="your-password"